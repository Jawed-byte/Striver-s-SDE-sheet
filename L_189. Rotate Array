class Solution {
public:
    void reverse(vector<int>& v, int i, int j){
        while(i<j){
            swap(v[i],v[j]);
            i++;
            j--;
        }
    }
    void rotate(vector<int>& nums, int k) {
        int n=nums.size();
        if(n==1 || n==k)
            return;
        if(k>n)
            k=k%n;
        reverse(nums,0,n-k-1);
        reverse(nums,n-k,n-1);
        reverse(nums,0,n-1);
    }
};
