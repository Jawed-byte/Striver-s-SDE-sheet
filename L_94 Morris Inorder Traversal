// Morris Inorder Traversal

class Solution{
public:
    vector<int> inorderTraversal(TreeNode* root){
        vector<int> inorder;
        TreeNode* node = root;
        while(node!=NULL){
            if(node->left==NULL){
                inorder.push_back(node->val);
                node = node->right;
            }
            else{
                TreeNode* l = node->left;
                while(l->right && l->right!=node){
                    l = l->right;
                }
                if(l->right == NULL){
                    l->right = node;
                    node = node->left;
                }
                else{
                    l->right = NULL;
                    inorder.push_back(node->val);
                    node = node->right;
                }
            }
        }
        return inorder;
    }
};
